---
import { name } from "../data/company";

interface NavbarItem {
  label: string;
  href: string;
}

const navbarItems: NavbarItem[] = [
  {
    label: "Home",
    href: "/",
  },
  {
    label: "About Us",
    href: "/about",
  },
  {
    label: "Contact",
    href: "/contact",
  },
];

const isActive = (href: string) => Astro.request.url.endsWith(href);
---

<nav
  class="fixed inset-x-0 top-0 z-10 mx-auto flex w-full flex-col items-center justify-between bg-white bg-opacity-60 px-24 font-title font-semibold text-gray-700 backdrop-blur-[10px] lg:top-5 lg:w-5/6 lg:max-w-7xl lg:flex-row lg:flex-wrap lg:rounded-full"
  role="navigation"
  aria-label="main navigation"
>
  <h1 class="my-3 text-xl font-bold lg:my-0">[MD]</h1>
  <div class="hidden w-auto text-center lg:block">
    <ul class="flex flex-col text-gray-700 lg:flex-row">
      {
        navbarItems.map((item) => (
          <a
            class:list={[
              "px-4 py-2 lg:p-4",
              isActive(item.href) && "text-amber-500",
            ]}
            rel="prefetch"
            href={item.href}
          >
            <span>{item.label}</span>
          </a>
        ))
      }
    </ul>
  </div>
</nav>
