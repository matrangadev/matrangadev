---
import { name, legalName, phoneNumber, email, mission } from "../data/company";

const currentYear = new Date().getFullYear();
---

<footer class="bg-amber-50 text-gray-700">
  <div class="container mx-auto w-4/5 max-w-7xl space-y-3 py-24">
    <div class="flex flex-col lg:flex-row">
      <div class="flex-1">
        <div>
          <h4 class="mb-2 font-title font-semibold">Contact Us</h4>
          <p class="company-name">{name}</p>

          <p class="company-phoneNumber">
            <a href={`tel:${phoneNumber}`}>{phoneNumber}</a>
          </p>
          <p class="company-email">
            <a href={`mailto:${email}`}>{email}</a>
          </p>
          <p class="mt-3">
            Price range is $500 for smaller projects and larger projects require
            a custom quote.
          </p>
        </div>
      </div>
      <div class="flex-1">
        <h4 class="mb-2 font-title font-semibold">Navigation</h4>
        <nav>
          <ul>
            <li>
              <a href="/" rel="prefetch">Home</a>
            </li>
            <li>
              <a href="/about" rel="prefetch">About Us</a>
            </li>
            <li>
              <a href="/contact" rel="prefetch">Contact Us</a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="flex-1">
        <p class="mb-2 font-title font-semibold">Mission Statement</p>
        <p>{mission}</p>
      </div>
    </div>
    <p class="text-center text-gray-400">
      &copy; {currentYear}
      {legalName}
    </p>
  </div>
</footer>
