---
import { name, legalName, phoneNumber, email, mission } from "../data/company";

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <div class="container is-max-widescreen">
    <div class="columns">
      <div class="column">
        <div>
          <h4 class="title is-size-6 mb-2">Contact Us</h4>
          <p class="company-name">{name}</p>

          <p class="company-phoneNumber">
            <a href={`tel:${phoneNumber}`}>{phoneNumber}</a>
          </p>
          <p class="company-email">
            <a href={`mailto:${email}`}>{email}</a>
          </p>
          <p class="mt-3">
            Price range is $500 for smaller projects and larger projects require
            a custom quote.
          </p>
        </div>
      </div>
      <div class="column is-3">
        <h4 class="title is-size-6 mb-2">Navigation</h4>
        <nav>
          <ul>
            <li>
              <a href="/" rel="prefetch">Home</a>
            </li>
            <li>
              <a href="/about" rel="prefetch">About Us</a>
            </li>
            <li>
              <a href="/contact" rel="prefetch">Contact Us</a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="column">
        <p class="title is-size-6 mb-2">Mission Statement</p>
        <p>{mission}</p>
      </div>
    </div>
    <p class="has-text-centered">
      &copy; {currentYear}
      {legalName}
    </p>
  </div>
</footer>
