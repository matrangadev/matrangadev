---
import { name, phoneNumber, tagLinePrefix } from "../data/company";
import { services } from "../data/services";
import Icon from "astro-icon";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <main>
    <section
      class="bg-gradient bg-gradient-to-br from-amber-400 to-amber-300 text-gray-800"
    >
      <div
        class="container mx-auto w-4/5 max-w-7xl space-y-5 pb-20 pt-36 text-center font-title lg:pb-40 lg:pt-56"
      >
        <h1 class="text-5xl font-semibold md:text-6xl lg:text-8xl">
          {name}
        </h1>
        <h2 class="text-3xl lg:text-4xl">
          {tagLinePrefix}&nbsp;
          <br class="lg:hidden" />
          <span id="location" class="font-semibold underline"></span>
        </h2>
      </div>
    </section>

    <section
      class="container mx-auto flex w-4/5 max-w-7xl flex-col items-start text-center lg:flex-row lg:text-left"
    >
      <div class="mx-auto w-60 lg:w-1/2">
        <video autoplay class="mx-auto lg:w-80">
          <source src="/assets/coins_stacking.mp4" type="video/mp4" />
        </video>
      </div>
      <div class="mt-10 space-y-6 px-11 lg:mt-20 lg:w-1/2 lg:py-12">
        <h2 class="leading-12 font-title text-5xl font-semibold text-gray-800">
          We want to save you <span class="text-amber-500 underline">
            money</span
          >
        </h2>
        <p class="font-title text-xl font-medium text-gray-600">
          By making the right technology choices for your organization. Whether
          that means helping you select the best existing tools and services, or
          making them from scratch for your exact needs.
        </p>
      </div>
    </section>

    <section
      class="container mx-auto flex w-4/5 max-w-7xl flex-col items-center py-20 text-center lg:flex-row-reverse lg:text-left"
    >
      <div class="mx-auto w-64 lg:w-1/2">
        <img
          src="/assets/man_with_clock.svg"
          alt="Man with clock"
          class="mx-auto w-80"
        />
      </div>
      <div class="space-y-6 px-11 lg:w-1/2">
        <h2 class="leading-12 font-title text-5xl font-semibold text-gray-800">
          We want to save you <span class="text-amber-500 underline">
            time</span
          >
        </h2>
        <p class="font-title text-xl font-medium text-gray-600">
          By automating the processes that you do monthly, weekly, and daily to
          keep your organization running.
        </p>
      </div>
    </section>

    <section
      class="container mx-auto w-4/5 max-w-7xl space-y-14 py-24 text-center font-title"
    >
      <div
        class="rounded-lg bg-amber-600 p-11 text-4xl font-semibold text-white lg:text-5xl"
      >
        <h1>Who We Are</h1>
      </div>
      <p class="text-justify text-lg text-gray-800">
        <span class="font-semibold">Matranga Development</span>
        is a mission-driven, software development and consulting agency you can depend
        on to serve your organization's technology needs. Owned by a RPI graduate
        working in the financial technology industry, we seek to give back to the
        upstate communities that we've benefited from. We work with you to determine
        how we can provide the <span class="font-semibold text-amber-500"
          >maximum value</span
        > to you at the <span class="font-semibold text-amber-500"
          >minimum cost</span
        >. Whether your needs range from a basic informational website to more
        complex software systems, we will happily meet you where you are.
      </p>
    </section>

    <section
      class="container mx-auto w-4/5 max-w-7xl space-y-14 py-11 text-center font-title"
    >
      <div class="text-4xl font-semibold lg:text-5xl">
        <h1>Our Offered Services</h1>
      </div>
      <div
        class="flex flex-col space-y-5 text-white lg:flex-row lg:space-x-5 lg:space-y-0"
      >
        <div
          class="w-full cursor-pointer space-y-4 rounded-lg bg-amber-400 p-10 transition-all hover:scale-105 lg:rounded-none lg:rounded-tl-lg lg:rounded-bl-lg"
        >
          <img
            class="mx-auto w-52"
            src="/assets/man_with_questions.svg"
            alt="Smart phone held in a hand"
          />
          <h2 class="text-3xl font-semibold">Technology Consulting</h2>
        </div>
        <div
          class="w-full cursor-pointer space-y-4 rounded-lg bg-amber-400 p-10 transition-all hover:scale-105 lg:rounded-none"
        >
          <img
            class="mx-auto w-52"
            src="/assets/phone_with_hand.svg"
            alt="Smart phone held in a hand"
          />
          <h2 class="text-3xl font-semibold">Custom Software Development</h2>
        </div>
        <div
          class="w-full cursor-pointer space-y-4 rounded-lg bg-amber-400 p-10 transition-all hover:scale-105 lg:rounded-none lg:rounded-tr-lg lg:rounded-br-lg"
        >
          <img
            class="mx-auto w-52"
            src="/assets/phone_with_hand.svg"
            alt="Smart phone held in a hand"
          />
          <h2 class="text-3xl font-semibold">Mobile Development</h2>
        </div>
      </div>
    </section>

    <script src="https://unpkg.com/typeit@8.7.0/dist/index.umd.js"></script>
    <script>
      import TypeIt from "typeit";

      const TYPE_SPEED = 40;
      const PAUSE_AFTER_TYPE = 2000;
      const PAUSE_BEFORE_DELETE = 200;

      const locations = [
        "the NY Capital Region",
        "Albany",
        "Troy",
        "Schenectady",
        "Saratoga",
      ];

      document.addEventListener("DOMContentLoaded", function () {
        let typer = new TypeIt("#location", {
          loop: true,
          speed: TYPE_SPEED,
        });

        for (const location of locations) {
          typer = typer
            .type(location)
            .pause(PAUSE_AFTER_TYPE)
            .delete()
            .pause(PAUSE_BEFORE_DELETE);
        }

        typer.go();
      });
    </script>
  </main>
</BaseLayout>
